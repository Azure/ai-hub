{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "name-compliant-webAppName": "[concat(parameters('prefix'), '-', parameters('location'), '-wa')]"
    },
    "resources": [],
    "outputs": {
        "systemIdentityId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', variables('name-compliant-webAppName')), '2021-10-01', 'Full').identity.principalId]"
        }
    }
}