{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "msedge",
            "request": "launch",
            "name": "Vite in Edge",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/avatar/avatar-spa/src"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vite in Chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/avatar/avatar-spa/src"
        },
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "avatar/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "8080"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}